<Window x:Class="BasicWPFApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicWPFApp.WPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="480" 
        Width="640"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Source={StaticResource IocContainer}, Path=MainWindowViewModel}">
    <Grid>
        <StackPanel>
            <Button Content="Show Window 2"
                    Command="{Binding ShowWindow2Command}"/>
            <TextBox x:Name="tb"/>
            <Button Content="Create Order"
                    Command="{Binding CreateOrderCommand}"
                    CommandParameter="{Binding ElementName=tb, Path=Text}"/>
            <TextBlock Text="Orders"
                       Margin="0 12 0 0 "/>
            <ItemsControl ItemsSource="{Binding Orders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
